<p id="notice"><%= notice %></p>
<% provide(:title, "Developers List") %>
<h1>Listing Developers</h1>

<div class="row">
<div class="col-md-5 col-md-offset-3">
  <table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.name %></td>
        <td><%= link_to 'Show', developer %></td>
        <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td><%= link_to 'Delete', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>

</table>
  </div>
  </div>
<br>
<center><%= link_to 'New Developer', new_developer_path, class: 'btn btn-primary btn-center' %></center>

