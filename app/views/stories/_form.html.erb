<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :point_value %><br>
      <%= f.text_field :point_value %>
    </div>

    <%= f.label :stage_id %>
    <%= select("story", "stage_id", Stage.all.collect{ |c| [ c.name, c.id] }) %>

    <%= f.label :project_id %>
    <%= select("story", "project_id", [Project.find_by(id: current_user.project_id)].collect{ |c| [ c.name, c.id] }) %>


    <div class="field">
      <br>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
